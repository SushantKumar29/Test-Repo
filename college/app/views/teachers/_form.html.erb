<div class="section">
  <%= form_for teacher, html: { multipart: true } do |f| %>
  
   <div class="field" style="width: 50%;">
    <div class="control">
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name,class: 'input', wrapper: false  %>
    </div>
  </div>
  <div class="field" style="width: 50%;">
    <div class="control">
      <%= f.label :description, class: 'label' %>
      <%= f.cktext_area :description, class: 'textarea', wrapper: false  %>
    </div>
  </div>
  
  <div class="field" style="width: 50%;">
    <div class="control">
      <%= f.label :image, class: 'label' %>
      <%= f.file_field :image, class: 'input', wrapper: false  %>
    </div>
  </div>
  
  <%= f.submit :Save, class: "button is-primary" %> 
  <% end %>
</div>


  
