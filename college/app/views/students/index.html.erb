<% content_for :page_title, "Students" %>

<section class="section">
  <div class="container" style="width: 60%;">
    <span style="margin-left: 2%; font-size: 25px;font-weight: bold;">Student List</span>
    <% students.each do |student| %>
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-4">
              <%= link_to student.name, student %>
            </p>
          </div>
        </div>
        
      </div>
    </div>

  <% end %>
  <div style="margin-top: 2%;">
  <%= will_paginate students, renderer: BulmaPagination::Rails  %>  
</div>
  </div>
            
</section>

      






