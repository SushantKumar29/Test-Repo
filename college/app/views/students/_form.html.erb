<div class="section">
  <%= form_for student, html: { multipart: true } do |f| %>

  <% if student.errors.any? %>
    <div id="error_explanation" class="alert" style="text-align: center; color: red;">
      <h2><%= pluralize(student.errors.count, "error") %> Prohibited this record from being saved:</h2>

      <ul>
        <% student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field" style="width: 50%;">
    <div class="control">
      <%= f.label :registration_number, class: 'label', wrapper: false %>
      <%= f.text_field :registration_number, class: 'input', wrapper: false %>
    </div>
  </div>
  <div class="field" style="width: 50%;">
    <div class="control">
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name,class: 'input', wrapper: false  %>
    </div>
  </div>
  
  <div class="field" style="width: 50%;">
    <div class="control">
      <%= f.label :branch, class: 'label' %>
      <%= f.text_field :branch, class: 'input', wrapper: false  %>
    </div>
  </div>
  
  <div class="field" style="width: 50%;">
    <div class="control">
      <%= f.label :image, class: 'label' %>
      <%= f.file_field :image, class: 'input', wrapper: false  %>
    </div>
    
    <!-- <div class="field" style="width: 50%;">
      <div class="control">
        <%= f.label :'Assign Teacher', class: 'label' %>
        <%= f.collection_select :id, Teacher.order(:name),:id,:name, include_blank: false, class: 'input' %>
      </div>
    </div> -->
  </div>
  
  <%= f.submit :Save, class: "button is-primary" %>
  <% end %>
</div>


  
